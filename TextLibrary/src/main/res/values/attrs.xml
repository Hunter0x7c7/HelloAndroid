<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--单行输入控件-->
    <declare-styleable name="UnilineInput">
        <!--EditText-->
        <attr name="text" format="string|reference" />
        <attr name="inputHint" format="string|reference" />
        <attr name="textColor" format="color" />
        <attr name="textColorHint" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="inputHintSize" format="dimension" />
        <attr name="maxLength" format="integer" />
        <attr name="maxLines" format="integer" />
        <attr name="paddingLeft" format="dimension" />
        <attr name="paddingRight" format="dimension" />
        <attr name="inputType">
            <enum name="text" value="0x00000001" />
            <enum name="phone" value="0x00000003" />
            <enum name="password" value="0x00000080" />
            <enum name="number" value="0x00000002" />
            <enum name="numberDecimal" value="0x00002002" />
        </attr>
        <attr name="background" format="reference" />

        <!--ImageView-->
        <attr name="drawableLeft" format="reference" />

        <!--ImageButton-->

        <!--CheckBox-->
        <attr name="inputPassword" format="boolean" />
    </declare-styleable>

    <!--根据可显示宽度调整字体大小-->
    <declare-styleable name="AutoAlignTextView">
        <attr name="maxTextSize" format="dimension" />
        <attr name="minTextSize" format="dimension" />
    </declare-styleable>

    <!--自定义ScrollView-->
    <declare-styleable name="ZHScrollView">
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>

</resources>