<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hunter.helloandroid.module.custom.hexagon.HexagonsLayout
        android:id="@+id/hexagons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.hunter.helloandroid.module.custom.hexagon.HexagonView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:hvtext="(0,0)"
            app:hvtextColor="@android:color/black"
            app:hvtextSize="10sp"
            app:viewColor="@color/colorPrimary"
            app:x="0"
            app:y="0" />

        <com.hunter.helloandroid.module.custom.hexagon.HexagonView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:hvtext="(2,0)"
            app:hvtextColor="@android:color/black"
            app:hvtextSize="10sp"
            app:viewColor="@android:color/holo_orange_dark"
            app:x="2"
            app:y="0" />

        <com.hunter.helloandroid.module.custom.hexagon.HexagonView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:hvtext="(1,0)"
            app:hvtextColor="@android:color/black"
            app:hvtextSize="10sp"
            app:viewColor="@android:color/holo_green_light"
            app:x="1"
            app:y="0" />

        <com.hunter.helloandroid.module.custom.hexagon.HexagonView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:hvtext="(3,0)"
            app:hvtextColor="@android:color/black"
            app:hvtextSize="10sp"
            app:viewColor="@android:color/holo_red_light"
            app:x="3"
            app:y="0" />

        <com.hunter.helloandroid.module.custom.hexagon.HexagonView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:hvtext="(0,1)"
            app:hvtextColor="@android:color/black"
            app:hvtextSize="10sp"
            app:viewColor="@android:color/holo_purple"
            app:x="0"
            app:y="1" />

        <com.hunter.helloandroid.module.custom.hexagon.HexagonView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:hvtext="(2,1)"
            app:hvtextColor="@android:color/black"
            app:hvtextSize="10sp"
            app:viewColor="@android:color/holo_blue_dark"
            app:x="2"
            app:y="1" />

        <com.hunter.helloandroid.module.custom.hexagon.HexagonView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:hvtext="(1,1)"
            app:hvtextColor="@android:color/black"
            app:hvtextSize="10sp"
            app:viewColor="@android:color/holo_red_dark"
            app:x="1"
            app:y="1" />

        <com.hunter.helloandroid.module.custom.hexagon.HexagonView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:hvtext="(3,1)"
            app:hvtextColor="@android:color/black"
            app:hvtextSize="10sp"
            app:viewColor="@android:color/darker_gray"
            app:x="3"
            app:y="1" />

        <com.hunter.helloandroid.module.custom.hexagon.HexagonView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:hvtext="(2,2)"
            app:hvtextColor="@android:color/black"
            app:hvtextSize="10sp"
            app:viewColor="@android:color/holo_orange_dark"
            app:x="2"
            app:y="2" />

        <com.hunter.helloandroid.module.custom.hexagon.HexagonView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:hvtext="(0,2)"
            app:hvtextColor="@android:color/black"
            app:hvtextSize="10sp"
            app:viewColor="@android:color/holo_blue_bright"
            app:x="0"
            app:y="2" />

        <com.hunter.helloandroid.module.custom.hexagon.HexagonView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:hvtext="(0,3)"
            app:hvtextColor="@android:color/black"
            app:hvtextSize="10sp"
            app:viewColor="@android:color/holo_blue_dark"
            app:x="0"
            app:y="3" />

        <com.hunter.helloandroid.module.custom.hexagon.HexagonView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:hvtext="(1,2)"
            app:hvtextColor="@android:color/black"
            app:hvtextSize="10sp"
            app:viewColor="@android:color/holo_green_dark"
            app:x="1"
            app:y="2" />

        <com.hunter.helloandroid.module.custom.hexagon.HexagonView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:hvtext="(1,3)"
            app:hvtextColor="@android:color/black"
            app:hvtextSize="10sp"
            app:viewColor="@android:color/holo_green_dark"
            app:x="1"
            app:y="3" />

        <com.hunter.helloandroid.module.custom.hexagon.HexagonView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:hvtext="(3,3)"
            app:hvtextColor="@android:color/black"
            app:hvtextSize="10sp"
            app:viewColor="@android:color/holo_green_dark"
            app:x="3"
            app:y="3" />

        <com.hunter.helloandroid.module.custom.hexagon.HexagonView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:hvtext="(1,4)"
            app:hvtextColor="@android:color/black"
            app:hvtextSize="10sp"
            app:viewColor="@android:color/holo_green_dark"
            app:x="1"
            app:y="4" />

        <com.hunter.helloandroid.module.custom.hexagon.HexagonView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:hvtext="(3,4)"
            app:hvtextColor="@android:color/black"
            app:hvtextSize="10sp"
            app:viewColor="@android:color/holo_green_dark"
            app:x="3"
            app:y="4" />
    </com.hunter.helloandroid.module.custom.hexagon.HexagonsLayout>
</LinearLayout>