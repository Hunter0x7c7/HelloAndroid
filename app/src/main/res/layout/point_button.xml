<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="440dp"
        android:layout_height="56dp">

        <ImageButton
            android:id="@+id/ib_button_gone"
            android:layout_width="40dp"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_blws_selector"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_name_right"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignLeft="@id/ib_button_gone"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/btn_shape_point_name_bg"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="气象站一号"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="invisible" />

        <View
            android:layout_width="220dp"
            android:layout_height="38dp"
            android:layout_marginRight="-20dp"
            android:layout_marginTop="1dp"
            android:layout_toLeftOf="@id/ib_button_gone"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/ll_control_bg"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ib_button_gone"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp">

            <LinearLayout
                android:id="@+id/ll_point_menu"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:background="@drawable/btn_shape_point_control_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="24dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingRight="4dp"
                    android:text="传感"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="监控"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="运行"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:visibility="invisible" />

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@drawable/btn_back_selector"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="24dp"
                android:visibility="visible">

                <RadioGroup
                    android:id="@+id/rg_point_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/btn_sense"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/btn_point_control_selector"
                        android:button="@null"
                        android:gravity="top"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="传感"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/btn_run"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="6dp"
                        android:background="@drawable/btn_point_control_selector"
                        android:button="@null"
                        android:gravity="top"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="运行"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/btn_monitor"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="6dp"
                        android:background="@drawable/btn_point_control_selector"
                        android:button="@null"
                        android:gravity="top"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="监控"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />
                </RadioGroup>

                <ImageButton
                    android:id="@+id/ib_option_back"
                    android:layout_width="35dp"
                    android:layout_height="34dp"
                    android:layout_gravity="top"
                    android:background="@android:color/transparent"
                    android:src="@drawable/btn_back_selector" />
            </LinearLayout>
        </RelativeLayout>

        <ImageButton
            android:id="@+id/ib_button"
            android:layout_width="40dp"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_blws_selector" />
    </RelativeLayout>
</RelativeLayout>