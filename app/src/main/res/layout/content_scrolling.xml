<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nsv_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <!--   tools:showIn="@layout/activity_scrolling"
     tools:context="com.collapsable.ScrollingActivity"
     xmlns:tools="http://schemas.android.com/tools"
    android:nestedScrollingEnabled="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
     -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A material metaphor is the unifying theory of a rationalized space and a system of motion." />

        <com.hunter.text.UnilineInput
            android:id="@+id/ui_user_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:drawableLeft="@mipmap/ic_launcher"
            app:inputHint="login_user"
            app:text="dfjsakfjds;lkfj"
            app:inputHintSize="16sp"
            app:paddingLeft="18dp"
            app:textColor="@color/colorAccent"
            app:textColorHint="@color/black88"
            app:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/large_text" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
